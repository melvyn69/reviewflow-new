{
  "framework": "vite",
  "buildCommand": "npm run build",
  "installCommand": "npm install --legacy-peer-deps",
  "rewrites": [
    {
      "source": "/((?!api/|_next/|static/|assets/|favicon.ico).*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron-digest",
      "schedule": "0 9 * * *"
    }
  ]
}